@model AddBookViewModel;

@{
	ViewData["Title"] = "Add book";
}

<form method="post" asp-controller="Home" asp-action="Add">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input id="author" type="text" class="form-control" asp-for="Author" />
    </div>
    <div class="mb-3">
        <label for="genre" class="form-label">Genre</label>
        <input id="genre" type="text" class="form-control" asp-for="Genre" />
    </div>
    <div class="mb-3">
        <label for="isAvailable" class="form-label">IsAvailable</label>
		<input class="form-check" type="checkbox" id="isAvailable" asp-for="IsAvailable" />
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">URL Image</label>
        <input id="image" type="text" class="form-control" asp-for="URL_Image" />
    </div>
    <button class="btn btn-success" type="submit">Save</button>
</form>